<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/decorder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:elevation="2dp"
        android:minHeight="50dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <!--<include-->
        <!--android:id="@+id/actionbar"-->
        <!--layout="@layout/include_actionbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_alignParentTop="true"/>-->

        <LinearLayout
            android:id="@+id/buttom_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">


            <LinearLayout
                android:id="@+id/home_layout"
                style="@style/tabs_layout">

                <ImageView
                    android:id="@+id/home_image"
                    style="@style/tabs_image"
                    android:src="@drawable/wechat_address_n" />

                <TextView
                    android:id="@+id/home_text"
                    style="@style/tabs_text"
                    android:text="首页" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/friend_layout"
                style="@style/tabs_layout">

                <ImageView
                    android:id="@+id/friend_image"
                    style="@style/tabs_image"
                    android:src="@drawable/wechat_wechat_n" />

                <TextView
                    android:id="@+id/friend_text"
                    style="@style/tabs_text"
                    android:text="朋友" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/add_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/home_add" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/message_layout"
                style="@style/tabs_layout">

                <ImageView
                    android:id="@+id/message_image"
                    style="@style/tabs_image"
                    android:src="@drawable/wechat_moment_n" />

                <TextView
                    android:id="@+id/message_text"
                    style="@style/tabs_text"
                    android:text="聊天" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/my_layout"
                style="@style/tabs_layout">

                <ImageView
                    android:id="@+id/my_image"
                    style="@style/tabs_image"
                    android:src="@drawable/wechat_me_n" />

                <TextView
                    android:id="@+id/my_text"
                    style="@style/tabs_text"
                    android:text="我" />
            </LinearLayout>


        </LinearLayout>

           <View
               android:id="@+id/line"
               android:layout_width="match_parent"
               android:layout_height="1px"
               android:layout_above="@id/buttom_menu"
               android:background="@color/diliver" />

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/line"
            android:background="@color/lightgray2" />

    </RelativeLayout>

</LinearLayout>