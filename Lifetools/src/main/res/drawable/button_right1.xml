<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="50" android:exitFadeDuration="50">

    <item android:state_focused="true">
        <shape>
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp" />
            <gradient android:angle="90" android:endColor="@color/youlan" android:startColor="#8000897b" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp" />
            <gradient android:angle="90" android:endColor="@color/youlan" android:startColor="#8000897b" />

        </shape>
    </item>

    <item>
        <shape>
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp" />
            <gradient android:angle="90" android:endColor="@color/youlan2" android:startColor="#4db6ac" />
        </shape>
    </item>

</selector>