<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="100">

    <item android:state_focused="true">
        <shape>
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp" />

            <!--<solid android:color="@color/button_blue_pressed" />-->
            <gradient android:angle="0" android:endColor="@color/red" android:startColor="@color/pager" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp" />

            <!--<solid android:color="@color/button_blue_pressed" />-->
            <gradient android:angle="0" android:endColor="@color/red" android:startColor="@color/pager" />

        </shape>
    </item>
    <item>
        <shape>
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp" />

            <!--<solid android:color="@color/blue" />-->
            <gradient android:angle="90" android:endColor="@color/red" android:startColor="@color/pager" />
        </shape>
    </item>

</selector>