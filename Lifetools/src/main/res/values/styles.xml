    <style name="Col1Style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.6</item>
    </style>

    <style name="Col2Style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="money_style_edit">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/edit_green</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#f73a3a3a</item>
    </style>

    <style name="money_text_left1">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#f7269dae</item>
    </style>

    <style name="money_text_left">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#f736a989</item>
    </style>


    <style name="coloritem">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="imageitem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="game_button">
        <!--<item name="android:background">@drawable/abc_btn_default_mtrl_shape</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ff23b76e</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialogme" parent="dialog_white_style">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="popupMenu" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:popupMenuStyle">@style/popupMenubg</item>
    </style>

    <style name="popupMenubg" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup</item>
    </style>


    //这个是好看的桌面插件的style

    <style name="newstyle">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#c0ffffff</item>
        <item name="android:hint">添加待办事项</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">255</item>
        <item name="android:shadowColor">#70000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:background">@drawable/wl_input_bg</item>
        <item name="android:inputType">textAutoCorrect|textCapSentences</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>