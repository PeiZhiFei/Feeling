<resources>

    <style name="AppThemeGame" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme3" parent="BaseAppTheme" />

    <style name="fullscreen" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="tabs_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_margin">2dp</item>
    </style>


    <color name="color_text_black">#424242</color>

    <style name="tabs_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tabs_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


    <color name="s1">#6a9cfe</color>
    <color name="s2">#25ba51</color>
    <color name="s3">#fec052</color>
    <color name="s4">#fe6d52</color>
    <color name="s5">#fe3cb5</color>
    <color name="s6">#b654fe</color>

    <style name="Holo" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="backgrounds">@drawable/login_image1</item>
        <item name="buttons">@drawable/button_green</item>
        <item name="textcolors">@color/black</item>
    </style>

    <style name="AppTheme_Change" parent="Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="backgrounds">@drawable/login_image2</item>
        <item name="buttons">@drawable/button_blue</item>
        <item name="textcolors">@color/white</item>
    </style>

    <style name="SettingButton">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:alpha">0.5</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/textcolors</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SettingText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SettingSwitchButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="baseButtonStyle">
        <item name="android:layout_margin">5dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
