<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yuntu_dialog_normal_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/yuntu_dialog_normal_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/yuntu_title"
        android:textColor="@color/youlan"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/youlan" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/yuntu_dialog_normal_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/yuntu_message"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/yuntu_dialog_normal_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_gray_left"
            android:text="@string/yuntu_cancel"
            android:textColor="@color/youlan"
            android:textSize="20sp" />

        <Button
            android:id="@+id/yuntu_dialog_normal_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_gray_right"
            android:text="@string/yuntu_confirm"
            android:textColor="@color/youlan"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>