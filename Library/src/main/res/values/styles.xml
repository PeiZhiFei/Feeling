<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="sfd">#555555</color>
    <color name="old_green">#39ac69</color>
    <drawable name="old_green">#39ac69</drawable>
    <style name="BlurDialogFragment.Default.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/unzoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_exit</item>
    </style>
    <style name="diliver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#e1e1e1</item>
    </style>

    <style name="dialog_style" parent="android:style/Theme.Dialog">
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dialog_style2" parent="Base.Theme.AppCompat.Dialog">
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    //支持状态栏沉浸的

    <style name="dialog_tint"/>

    <style name="dialog_loading_style" parent="dialog_style">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim2</item>
    </style>

    <style name="dialog_white_style" parent="dialog_style">
        <item name="android:windowBackground">@drawable/white_round</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim</item>
    </style>

    <style name="dialog_white_style2" parent="dialog_style">
        <item name="android:windowBackground">@drawable/white_round</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim2</item>
    </style>

    <style name="dialog_white_style3" parent="dialog_style">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim2</item>
        <!--这是原来默认的转圈圈样式-->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
    </style>

    <style name="dialog_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/unzoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_exit</item>
    </style>

    <style name="dialog_anim2" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="dialog_trans_style" parent="dialog_style">
        <item name="android:windowBackground">@drawable/white_round_trans</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_bottom_style" parent="dialog_style">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/popup_anim</item>
    </style>

    <style name="dialog_bottom_style_appcompat" parent="dialog_style2">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/popup_anim</item>
    </style>

    <style name="popup_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

</resources>