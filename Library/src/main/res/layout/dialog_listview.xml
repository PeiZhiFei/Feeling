<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_round"
    android:minWidth="250dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/offset_small"
    android:paddingTop="@dimen/offset_large">


    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_large"
        android:drawablePadding="@dimen/offset_medium"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/offset_micro"
        android:padding="@dimen/offset_micro"
        android:text="@string/dialog_douxing"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_size_large" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_medium"
        android:layout_marginLeft="@dimen/offset_large"
        android:layout_marginRight="@dimen/offset_large"
        android:layout_marginTop="@dimen/offset_medium" />


</LinearLayout>