<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal">

    <library.widget.CradleBall
        android:id="@+id/ball_one"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        app:loading_color="@color/main_green"
        app:loading_text="中"/>

    <library.widget.CradleBall
        android:id="@+id/ball_two"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:loading_color="@color/pink"
        app:loading_text="国"/>

    <library.widget.CradleBall
        android:id="@+id/ball_three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:loading_color="@color/orange"
        app:loading_text="烟"/>

    <library.widget.CradleBall
        android:id="@+id/ball_four"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        app:loading_color="@color/red2"
        app:loading_text="草"/>

</LinearLayout>