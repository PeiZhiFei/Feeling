<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/glb_blue"
                android:centerY="0.75"
                android:endColor="@color/glb_blue"
                android:startColor="@color/glb_blue" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/glb_blue"
                    android:centerY="0.75"
                    android:endColor="@color/glb_blue"
                    android:startColor="@color/glb_blue" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/glb_green"
                    android:centerY="0.75"
                    android:endColor="@color/glb_green"
                    android:startColor="@color/glb_green" />
            </shape>
        </clip>
    </item>

</layer-list>